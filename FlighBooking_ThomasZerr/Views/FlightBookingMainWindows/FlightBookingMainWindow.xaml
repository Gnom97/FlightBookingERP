<Window
    x:Class="FlighBooking_ThomasZerr.Views.FlightBookingMainWindows.FlightBookingMainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components2="clr-namespace:FlighBooking_ThomasZerr.Views.FlightBookingEditWindows.Components"
    xmlns:components3="clr-namespace:FlighBooking_ThomasZerr.Views.FlightBookingCreateWindows.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Hauptmenü"
    Width="375"
    Height="155"
    Closing="OnClosing"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Click="Logout"
            Content="Logout" />
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Click="OpenFlightBookingEdit"
            Content="Flugbuchung bearbeiten" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Click="OpenFlightBookingCreate"
            Content="Flugbuchung erstellen" />
    </Grid>
</Window>
